<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RichMan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@drawable/bg_main</item>
    </style>

    <!-- widget中所有弹窗的公有样式 -->
    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 窗体控件的出现方式：透明度渐变出现和消失 -->
    <style name="alpha_animation">
        <item name="android:windowEnterAnimation">@anim/alpha_to_untransparent</item>
        <item name="android:windowExitAnimation">@anim/alpha_to_transparent</item>
    </style>

    <!-- 窗体控件的出现方式：透明度渐变中心缩放出现和消失 -->
    <style name="scale_alpha_animation">
        <item name="android:windowEnterAnimation">@anim/scale_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/scale_alpha_out</item>
    </style>

    <!-- 窗体控件的出现方式：下面弹出下面收缩 带渐隐 -->
    <style name="slide_alpha_bottom_to_up_animation">
        <item name="android:windowEnterAnimation">@anim/slide_alpha_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_alpha_out_to_bottom</item>
    </style>

    <!-- 窗体控件的出现方式：下面弹出下面收缩 -->
    <style name="slide_bottom_to_up_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <!-- 窗体控件的出现方式：透明度渐变出现和消失 -->
    <style name="right_in_right_out_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!-- 窗体控件的出现方式：下面弹出上面收缩 -->
    <style name="slide_bottom_to_top_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

</resources>