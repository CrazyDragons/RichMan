<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLlInfo"
    android:layout_width="300dp"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_rectangle_solid_transparent_r10"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/mTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTvDesc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="9sp" />

        <LinearLayout
            android:id="@+id/mLlArmy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_rectangle_solid_transparent_r10"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mTvArmy"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/white" />


                <SeekBar
                    android:id="@+id/mSbArmy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/transparent"
                    android:max="20" />


                <TextView
                    android:id="@+id/mTvMaxArmy"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/mTvArmyMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRvEquipments"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_rectangle_solid_transparent_r10"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRvBanks"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mTvCount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_oval_solid_white"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:hint="ðŸŽ²"
            android:textStyle="bold" />


    </LinearLayout>


</FrameLayout>