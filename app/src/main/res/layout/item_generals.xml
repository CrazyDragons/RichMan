<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@drawable/shape_rectangle_solid_yellow_r5"
    android:gravity="center_vertical"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/mIvCover"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/mTvName"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mTvLife"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mTvAttack"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mTvDefense"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:textColor="@color/colorBlue"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/mIvDefense"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_defense"/>

</LinearLayout>