<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_item_map"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="1dp">

        <com.hzw.android.richman.view.LevelView
            android:id="@+id/mViewLevel"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="4" />

        <ImageView
            android:id="@+id/mIvDefense"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/icon_defense"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:id="@+id/mLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/mTvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mIvCityBg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/mIvCityCover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/mTvOwner"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="start|bottom"
            android:background="@drawable/shape_oval_solid_white"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLength="1"
            android:padding="2dp"
            android:textColor="@color/black"
            android:textSize="8sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/mIvAllColor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_all_color"
            android:layout_gravity="end|bottom"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

    </FrameLayout>

</LinearLayout>